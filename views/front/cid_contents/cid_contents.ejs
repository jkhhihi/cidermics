<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>사이다경제 | 콘텐츠</title>
<link href="/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/cid_contents.css" rel="stylesheet">
<link href="/css/swiper.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>

<link rel="stylesheet" type="text/css" href="/css/component.css" />
<script src="/js/modernizr.custom.js"></script>

<link rel="shortcut icon" href="http://cidermics.com/page_imgs/fixed_img/favicon.ico"/>
<link rel="icon" href="http://cidermics.com/page_imgs/fixed_img/favicon.ico"/>


</head>
<body>
<% include ../top %>

<div class="contents-menu">
		<div class="container">
				<div class="menu" align="center">
						<a href="/contents"><img src="/page_imgs/contents_img/icon_menu5.png" width='90' height='120'></a>
						<a href="/contents/1"><img src="/page_imgs/contents_img/icon_menu1.png" width='90' height='120'></a>
						<a href="/contents/2"><img src="/page_imgs/contents_img/icon_menu2.png" width='90' height='120'></a>
						<a href="/contents/3"><img src="/page_imgs/contents_img/icon_menu3.png" width='90' height='120'></a>
						<a href="/contents/4"><img src="/page_imgs/contents_img/icon_menu4.png" width='90' height='120'></a>
					
				</div>
		</div>
</div>
<!--콘텐츠뿌림-->
<div class="contents container">
		<div class="row">
			<ul class="grid effect-2" id="grid">
			
				<% for(var i=0; i<contents.length; i++) { %>
				<li>
				<div class="col-sm-12 col-xs-12">
					
					<a href="/contents/detail/<%= contents[i].con_no %>">
					<img class="img-responsive" src="<%= contents[i].con_photo %>"></a>
					
					
					<p><a href="/contents/detail/<%= contents[i].con_no %>">
						<%= contents[i].con_title %></a></p>
				</div>
			</li>
			<% } %>
			</ul>
		</div>
		<div class="icon-plus_con" align="center" onclick="addMore()"><img class="img-responsive" src="/page_imgs/fixed_img/icon_plus_con.png"></div>
</div>

<script src="/js/masonry.pkgd.min.js"></script>
		<script src="/js/imagesloaded.js"></script>
		<script src="/js/classie.js"></script>
		<script src="/js/AnimOnScroll.js"></script>
		<script>
			new AnimOnScroll( document.getElementById( 'grid' ), {
				minDuration : 0.4,
				maxDuration : 0.7,
				viewportFactor : 0.2
			} );
		</script>


<% include ../bottom %>


<script>
		var idx = 2;
		//var lang= "kr";
		function addMore (){
			var contents = '';
			$.ajax({
				url : '/addMore/'+idx,
				method : 'get',
				success : function(data){
					if (data.contents.length == 0){
						alert('마지막 콘텐츠입니다.');
						return;
					}
					idx ++;
					$.each(data.contents, function (index, value){
						contents += '<li> ' +
							 			'<div class="con-border bg-w"> ' + 
												'<a href="/contents/detail/'+value.con_no+'"> ' +
													'<div class="con-img"> ' +
														'<img src="'+value.con_photo+'"/> ' + 
													'</div> ' +
												'</a> ' +
							 					'<a href="/contents/detail/'+value.con_no+'"> ' +
							 						'<div class="con-title"><span><center>' + value.con_title +'</center></span></div>' +
							 					'</a> '+
							 			'</div> '+
							 		'</li> ';
							
					});
					$('#grid').append(contents);
					new AnimOnScroll( document.getElementById( 'grid' ), {
						minDuration : 0.4,
						maxDuration : 0.7,
						viewportFactor : 0.2
					} );
				}
			});
		}
		
	</script>

</body>
</html>
